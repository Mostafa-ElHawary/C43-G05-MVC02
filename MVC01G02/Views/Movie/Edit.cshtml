
@{
        Layout = "_MovieLayout";
        var pageTitle = ViewData["Title"] ?? "Edit";


}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div class="form-group">
                <label class="control-label">Title</label>
                <input name="title" class="form-control" value="@Model.Title" />
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input name="description" class="form-control" value="@Model.Description" />
            </div>
             <div class="form-group">
                <label class="control-label">Genre</label>
                <input name="genre" class="form-control" value="@Model.Genre" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

